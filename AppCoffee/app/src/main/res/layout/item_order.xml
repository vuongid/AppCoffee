<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff2dd">
        <ImageView
            android:id="@+id/img_order_product"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_americano_da" />
        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_toRightOf="@+id/img_order_product"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/layout_2">

            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Sản phẩm"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tv_order_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10000000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_decrease"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/img_minus"/>

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_decrease"
                android:gravity="center_horizontal"
                android:text="1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/tv_amount"
                android:src="@drawable/img_plus" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>